<div class="modal fade" id="signup-modal" tabindex="-1" role="dialog"  aria-hidden="true" style="display: none;"></div>

<script>
  function showModal(name) {
    if (name == 'signup') {
      $("#signup-modal").html("<%= escape_javascript(render 'common/devise/signup') %>")
    } else {
      $("#signup-modal").html("<%= escape_javascript(render 'common/devise/signin') %>")
    }
    $("#signup-modal").modal("show")
  };
</script>
