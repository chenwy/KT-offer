<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <h2 class="text-center"><%= t("signIn") %></h2>
</div>
<div class="modal-body">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                           :html => {:id => "log_in_user"},
                           :format => :json,
                           :remote => true ) do |f| %>
  <div class="input-group">
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-envelope"></span>
    </span>
    <%= f.email_field :login, autofocus: true, required: true, class: "form-control", placeholder:t("login") %>
  </div>

  <br>

  <div class="input-group">
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-lock"></span>
    </span>
    <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control", placeholder: t("password") %>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="checkbox col-md-12" style="padding-left:1.5em;">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end -%>

  <div class="form-actions">
    <br>
    <%= f.submit t("signIn"), class: 'btn btn-success', id: 'login_btn' %>
  </div>
  <% end %>
</div>
