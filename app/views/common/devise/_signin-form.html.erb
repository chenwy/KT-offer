<div class="loginmodal-container">
  <h1><%= t("signIn") %></h1>
  <br/>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :login, label: false, placeholder: t("login"), required: false, autofocus: true %>
    <%= f.input :password, label: false, placeholder: t("password"), required: false %>
    <%= f.input :remember_me, label: t("rememberMe"), as: :boolean if devise_mapping.rememberable? %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, t("signIn"),  data: {disable_with: t("submiting")} %>
  </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
