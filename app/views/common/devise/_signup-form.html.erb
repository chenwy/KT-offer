<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <h2 class="text-center"><%= t("signUp") %></h2>
</div>
<div class="modal-body">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:id => "sign_up_user"}, :format => :json, :remote => true ) do |f| %>

  <div class="input-group">
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-user"></span>
    </span>
    <%= f.text_field :username, autofocus: true, required: true, class: "form-control", placeholder: t("username") %>
  </div>

  <br/>

  <div class="input-group">
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-envelope"></span>
    </span>
    <%= f.email_field :email, required: true, class: "form-control", placeholder: t("email") %>
  </div>

  <br/>

  <div class="input-group">
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-lock"></span>
    </span>
    <%= f.password_field :password, autocomplete: "off", required: true,minlength: 8, class: "form-control", placeholder: t("password") %>
  </div>

  <br>

  <div class="input-group">
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-lock"></span>
    </span>
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true, minlength: 8, class: "form-control", placeholder: t("passwordConfirm") %>
  </div>

  <div class="form-actions">
    <br>
    <%= f.submit t("signUp"), class: 'btn btn-success' %>
  </div>
  <% end %>
</div>
