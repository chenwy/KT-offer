<div class="modal-dialog">
  <div class="loginmodal-container">
    <h1><%= t("signUp") %></h1>
    <br/>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.collection_radio_buttons :user_role, [[2, t('hrLabel')], [3, t('workerLabel')]], :first, :last %>
      <%= f.input :username,label: false, placeholder: t("username"), required: true, autofocus: true %>
      <%= f.input :email, label: false, placeholder: t("email"), required: true %>
      <%= f.input :password, label: false, placeholder: t("password"), required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, label: false, placeholder: t("passwordConfirm"), required: true %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, t("signUp"), data: {disable_with: t("submiting")}%>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
